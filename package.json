{
  "name": "lead-flood",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "turbo run dev --parallel --filter=@lead-flood/web --filter=@lead-flood/api --filter=@lead-flood/worker",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "db:generate": "pnpm --filter @lead-flood/db prisma:generate",
    "db:migrate": "pnpm --filter @lead-flood/db prisma:migrate",
    "db:migrate:dev": "pnpm --filter @lead-flood/db prisma:migrate:dev",
    "db:seed": "pnpm --filter @lead-flood/db prisma:seed",
    "db:studio": "pnpm --filter @lead-flood/db prisma:studio",
    "dev:infra": "docker compose -f infra/docker/docker-compose.local.yml up -d",
    "dev:infra:down": "docker compose -f infra/docker/docker-compose.local.yml down",
    "bootstrap": "pnpm install && pnpm dev:infra && pnpm db:migrate && pnpm db:seed",
    "contracts:check": "pnpm --filter @lead-flood/contracts build"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/node": "^22.12.0",
    "eslint": "^9.19.0",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "turbo": "2.6.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0",
    "vitest": "^3.0.4"
  }
}
